<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.quiz.quizapp.controller.UserController"
            prefHeight="800.0" prefWidth="430.0"
            style="-fx-background-color: white; -fx-background-radius: 32px; -fx-border-radius: 32px;">
    <children>
        <ImageView fitHeight="814.0" fitWidth="435.0" pickOnBounds="true">
            <image>
                <Image url="@../../../images/bg1.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="164.0" fitWidth="301.0" layoutX="59.0" layoutY="149.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../../../images/logo1.png"/>
            </image>
        </ImageView>
        <TextField fx:id="nameField" alignment="CENTER" layoutX="84.0" layoutY="469.0" prefHeight="38.0" prefWidth="267.0"
                   promptText="Enter name" style="-fx-border-radius: 20px; -fx-background-radius: 20px;">
            <font>
                <Font name="Oswald Regular" size="16.0"/>
            </font>
        </TextField>
        <Label layoutX="89.0" layoutY="420.0" text="What's your name, Quiz Champion?">
            <font>
                <Font name="Oswald Medium" size="19.0"/>
            </font>
        </Label>
        <Button fx:id="userBtn" alignment="CENTER" layoutX="84.0" layoutY="526.0" minWidth="-Infinity"
                mnemonicParsing="false" prefWidth="267.0"
                style="-fx-label-padding: 5px 50px; -fx-background-color: #504099; -fx-border-radius: 200px; -fx-background-radius: 50px;"
                text="S U B M I T" textFill="#fcfcfc">
            <font>
                <Font name="Calibri Bold" size="18.0"/>
            </font>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Button>
    </children>
</AnchorPane>
